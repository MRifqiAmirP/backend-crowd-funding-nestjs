generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  first_name      String
  last_name       String?
  password        String
  role            String
  instance        String
  education_level String
  email_validated Boolean
  created_at      DateTime @default(now()) @db.DateTime()
  updated_at DateTime @updatedAt

  @@map("users")
}
